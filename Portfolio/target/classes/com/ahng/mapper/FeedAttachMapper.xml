<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ahng.mapper.FeedAttachMapper">

	<insert id="insert">
		insert into feed_attach(uuid, uploadpath, filename, filetype, fno)
		values(#{uuid}, #{uploadPath}, #{fileName}, #{fileType}, #{fno})
	</insert>
	
	<delete id="delete">
		delete from feed_attach where uuid = #{uuid}
	</delete>

	<select id="findByFno" resultType="com.ahng.domain.FeedAttachDTO">
		select * from feed_attach where fno = #{fno}
	</select>
	
	<delete id="deleteAll">
		delete from feed_attach where fno = #{fno}
	</delete>
	
	<select id="getOldFiles" resultType="com.ahng.domain.FeedAttachDTO">
		select * from feed_attach where uploadpath = to_char(sysdate -1, 'yyyy\mm\dd')
	</select>
	
</mapper>